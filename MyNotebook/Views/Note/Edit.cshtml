@model MyNotebook.Models.Note;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/BootstrapLayout.cshtml";
}

<h2>Edit your Note</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="CreatedAt" class="form-control" value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="NoteId" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input type="hidden" asp-for="UserId" class="form-control" value="@ViewBag.userId" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input required asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>

            <a asp-controller="Note" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
